<h3><%=t 'employee.title' %></h3>
<div class="content">
    <%= link_to t('employee.new'), new_employee_path %>
</div>

<table class="content-table">
  <thead>
  <tr>
    <th><%= t 'employee.id' %></th>
    <th><%= t 'employee.full_name' %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @employees.each do |employee| %>
      <tr class="item-wrapper">
        <td><%= employee.id %></td>
        <td><%= employee.full_name %></td>

        <% if permitted? :employees, :show %>
          <td><%= link_to t('employee.show'), employee %></td>
        <% end -%>

        <% if permitted? :employees, :edit %>
          <td><%= link_to t('employee.edit'), edit_employee_path(employee) %></td>
        <% end -%>
        
        <% if permitted? :employees, :destroy %>
          <td><%= link_to t('employee.destroy'), employee, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        <% end -%>

      </tr>
  <% end %>
  </tbody>
</table>
