<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email,t('user.email') %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, t('user.password') %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('user.password_confirmation') %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= if_param_permitted :user, :role_id do
    "<div class='field'>
      #{f.label :role_id, t('user.role')}
      #{f.select :role_id, role_items}
      </div>"
  end %>

  <div class="actions">
    <%= f.submit t('user.update')%>
  </div>
<% end %>
