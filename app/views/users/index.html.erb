<h3><%= t('user.title')%></h3>
<div class="content">
  <% if permitted? :users, :new %>
    <%= link_to t('user.new'), new_user_path %>
  <% end -%>
</div>
<table class="content-table">
  <thead>
    <tr>
      <th><%= t('user.email')%></th>
      <th><%= t('user.role')%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="item-wrapper">
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <% if permitted? :users, :show, user %>
          <td><%= link_to t('user.show'), user %></td>
        <% end -%>

        <% if permitted? :users, :edit, user %>
          <td><%= link_to t('user.edit'), edit_user_path(user) %></td>
        <% end -%>

        <% if permitted? :users, :destroy, user %>
          <td><%= link_to t('user.destroy'), user, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>
