<h1><%= t('position.title')%></h1>

<table>
  <thead>
    <tr>
      <th><%= t('position.name')%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @job_positions.each do |job_position| %>
      <tr>
        <td><%= job_position.name %></td>
        <td><%= link_to t('position.show'), job_position %></td>
        <td><%= link_to t('position.edit'), edit_job_position_path(job_position) %></td>
        <td><%= link_to t('position.destroy'), job_position, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

