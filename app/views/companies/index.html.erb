<h1><%= t('company.title')%></h1>

<table>
  <thead>
    <tr>
      <th><%= t('company.id')%></th>
      <th><%= t('company.vat')%></th>
      <th><%= t('company.name')%></th>
      <th><%= t('company.district')%></th>
      <th><%= t('company.property_type')%></th>
      <%= raw"<th></th>" if permitted? :companies, :show %>
      <%= raw"<th></th>" if permitted? :companies, :edit %>
      <%= raw"<th></th>" if permitted? :companies, :destroy %>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.vat %></td>
        <td><%= company.name %></td>
        <td><%= company.district %></td>
        <td><%= company.property_type %></td>
        <%= if_permitted :companies, :show do
            "<td>#{link_to t('company.show'), company}</td>"
        end %>
        <%= if permitted? :companies, :edit
            raw "<td>#{link_to t('company.edit'), edit_company_path(company)}</td>"
        end %>
        <%= if permitted? :companies, :destroy
            raw "<td>#{link_to t('company.destroy'), company, method: :delete, data: { confirm: t('are_you_sure') }}</td>"\
        end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= raw "<td>#{link_to t('company.new'), new_company_path}</td>" if permitted? :companies, :new %>