<h3><%= @contract %></h3>
<div class="content">
  <% if permitted? :contracts, :edit %>
    <%= link_to t('contract.edit'), edit_contract_path(@contract) %>
  <% end %>
  
  <%= link_to t('back'), contracts_path %>

</div>
<p>
  <strong><%=t('contract.company')%>:</strong>
  <%= @contract.company.name %>
</p>

<p>
  <strong><%=t('contract.employee')%>:</strong>
  <%= @contract.employee.full_name %>
</p>

<p>
  <strong><%=t('contract.job_position')%>:</strong>
  <%= @contract.job_position.name %>
</p>
